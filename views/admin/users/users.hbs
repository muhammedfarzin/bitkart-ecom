{{> admin-navbar}}

<div class="fluid-container d-flex">
    {{> sidebar}}

    <div class="container">
        <div class="top-bar d-flex justify-content-between align-items-center">
            <div class="title">
                <h1 class="text-primary">Users</h1>
            </div>
            <div class="actions col-9 col-md-9">
                {{> searchbox for='users' class='col-12'}}
            </div>
        </div>
        <div class="list">
            {{#each users}}
            <div class="list-item d-flex justify-content-between">
                <div class="content">
                    <div class="text-primary fs-7">User id: {{this._id}}</div>
                    <h4 class="title">{{this.name}}</h4>
                    <div class="subtitle">{{this.email}}</div>
                    <div class="subtitle">{{this.mobile}}</div>
                </div>
                <div class="trailing">
                    <div class="actions">
                        <button class="btn btn-danger">Block</button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>