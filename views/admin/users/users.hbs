{{> admin-navbar}}

<div class="fluid-container d-flex">
    {{> sidebar}}

    <div class="container">
        <div class="top-bar d-flex justify-content-between align-items-center">
            <div class="title">
                <h1 class="text-primary">Users</h1>
            </div>
            <div class="actions col-9 col-md-9">
                {{> searchbox for='users' class='col-12'}}
            </div>
        </div>
        <table class="table table-bordered table-striped table-hover mt-3 w-100">
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Mobile</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                <tr>
                    <td>{{this._id}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.mobile}}</td>
                    <td class="text-capitalize" id="status{{this._id}}">{{this.status}}</td>
                    <td class="d-flex">
                        <button class="btn {{isEqualElse this.status 'active' 'btn-danger' 'btn-primary'}} col"
                            onclick="{{isEqual this.status 'blocked' 'un'}}blockUser('{{this._id}}')"
                            id="block{{this._id}}">
                            {{isEqualElse this.status 'active' 'Block' 'Unblock'}}
                        </button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<script src="/javascript/admin-script.js"></script>