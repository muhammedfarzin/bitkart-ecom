{{> navbar}}

<div class="fluid-container">
    <div class="banner">
        <img class="w-100" src="/images/banner.jpeg" alt="banner">
    </div>
</div>

<div class="mid-container w-95">
    {{!-- Recommended Products --}}
    <div class="section-list-h my-3">
        <div class="d-flex justify-content-between">
            <h3 class="subtitle fs-3">
                Recommended Products
            </h3>
            <a href="/search" class="text-btn">See more</a>
        </div>
        <div class="list-h mt-3">
            {{#each products}}
            {{> basic-product-card product=this}}
            {{/each}}
        </div>
    </div>

    {{!-- Categories --}}
    <div class="section-list-h my-5">
        <h3 class="subtitle fs-3">
            Categories
        </h3>
        <div class="list-h mt-3">
            {{#each categories}}
            <a href="/search?categories={{_id}}" class="product-card text-reset">
                <img src="{{this.imagePath}}" alt="img" class="object-fit-contain p-2">
                <div class="w-11rem p-2">
                    <div class="title text-capitalize">{{this.title}}</div>
                </div>
            </a>
            {{/each}}
        </div>
    </div>
</div>

<footer
    class="d-flex justify-content-center justify-content-sm-between align-items-center flex-wrap text-center bg-primary px-5 py-3">
    <img src="/images/bitkart-white.png" width="200" class="m-3" alt="Bitkart White">
    <div class="text-light">
        Copyright Â© 2024 All rights reserved
    </div>
</footer>